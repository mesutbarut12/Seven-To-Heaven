<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/setItemAusgabeAusgabeTv"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ausgabe : "
        app:layout_constraintBottom_toBottomOf="@+id/setItemAusgabeAusgabeEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemAusgabeAusgabeEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemAusgabeAusgabeEt" />

    <EditText
        android:id="@+id/setItemAusgabeAusgabeEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Ausgabe eingeben."
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemAusgabeDatumEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setItemAusgabeDatumTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Datum : "
        app:layout_constraintBottom_toBottomOf="@+id/setItemAusgabeDatumEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemAusgabeDatumEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemAusgabeDatumEt" />

    <EditText
        android:id="@+id/setItemAusgabeDatumEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Datum wählen."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemAusgabeBeschreibungEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setItemAusgabeAusgabeEt" />

    <TextView
        android:id="@+id/setItemAusgabeBeschreibungTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Beschreibung : "
        app:layout_constraintBottom_toBottomOf="@+id/setItemAusgabeBeschreibungEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemAusgabeBeschreibungEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemAusgabeBeschreibungEt" />

    <EditText
        android:id="@+id/setItemAusgabeBeschreibungEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Beschreibung eingeben."
        android:inputType="textMultiLine|textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemAusgabeUnterkontoEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setItemAusgabeDatumEt" />

    <TextView
        android:id="@+id/setItemAusgabeUnterkontoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Unterkonto :"
        app:layout_constraintBottom_toBottomOf="@+id/setItemAusgabeUnterkontoEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemAusgabeUnterkontoEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemAusgabeUnterkontoEt" />

    <EditText
        android:id="@+id/setItemAusgabeUnterkontoEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Unterkonto wählen"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemAusgabenSpeichern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setItemAusgabeBeschreibungEt" />

    <Button
        android:id="@+id/setItemAusgabenSpeichern"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Speichern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/setItemAusgabeUnterkontoEt"
        app:layout_constraintStart_toStartOf="@+id/setItemAusgabeUnterkontoTv"
        app:layout_constraintTop_toBottomOf="@+id/setItemAusgabeUnterkontoEt" />

</androidx.constraintlayout.widget.ConstraintLayout>