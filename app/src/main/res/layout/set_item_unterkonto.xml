<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/setItemUnterkontoUnterkontoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Unterkonto :"
        app:layout_constraintBottom_toBottomOf="@+id/setItemUnterkontoUnterkontoEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemUnterkontoUnterkontoEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemUnterkontoUnterkontoEt" />

    <TextView
        android:id="@+id/setItemUnterkontoDatumTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Datum :"
        app:layout_constraintBottom_toBottomOf="@+id/setItemUnterkontoDatumEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemUnterkontoDatumEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemUnterkontoDatumEt" />

    <TextView
        android:id="@+id/setItemUnterkontoBeschreibungTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Beschreibung :"
        app:layout_constraintBottom_toBottomOf="@+id/setItemUnterkontoBeschreibungEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemUnterkontoBeschreibungEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemUnterkontoBeschreibungEt" />

    <EditText
        android:id="@+id/setItemUnterkontoUnterkontoEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Unterkonto eingeben."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemUnterkontoDatumEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/setItemUnterkontoBeschreibungEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Beschreibung eingeben."
        android:inputType="textMultiLine|textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemUnterkontoProzentEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setItemUnterkontoDatumEt" />

    <EditText
        android:id="@+id/setItemUnterkontoDatumEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Datum wÃ¤hlen."
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemUnterkontoBeschreibungEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setItemUnterkontoUnterkontoEt" />

    <TextView
        android:id="@+id/setItemUnterkontoProzentTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Prozent :"
        app:layout_constraintBottom_toBottomOf="@+id/setItemUnterkontoProzentEt"
        app:layout_constraintEnd_toStartOf="@+id/setItemUnterkontoProzentEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setItemUnterkontoProzentEt" />

    <EditText
        android:id="@+id/setItemUnterkontoProzentEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Prozent eingeben."
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/setItemUnterkontoSpeichern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setItemUnterkontoBeschreibungEt" />

    <Button
        android:id="@+id/setItemUnterkontoSpeichern"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Speichern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/setItemUnterkontoProzentEt"
        app:layout_constraintStart_toStartOf="@+id/setItemUnterkontoProzentTv"
        app:layout_constraintTop_toBottomOf="@+id/setItemUnterkontoProzentEt" />
</androidx.constraintlayout.widget.ConstraintLayout>